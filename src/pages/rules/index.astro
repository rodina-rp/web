---
import PageLayout from '../../layouts/PageLayout.astro';

const title = "Правила проекта";
---

<PageLayout {title}>
<div class="max-w-4xl mx-auto">
  <div class="flex items-center gap-3 mb-4">
    <i class="fas fa-book text-2xl text-accent-red"></i>
    <h1 class="text-xl md:text-2xl font-semibold text-white">Разделы правил:</h1>
  </div>

  <div class="space-y-6">
    <div>
      <div class="space-y-3 pl-4">
        <div class="flex items-center">
          <span class="text-primary-red mr-3">•</span>
          <a href="/web/rules/general/" class="text-lg text-gray-300 hover:text-white hover:underline transition-colors">
            Общие Положения
          </a>
        </div>
        <div class="flex items-center">
          <span class="text-primary-red mr-3">•</span>
          <a href="/web/rules/terms/" class="text-lg text-gray-300 hover:text-white hover:underline transition-colors">
            Термины и Нарушение
          </a>
        </div>
        <div class="flex items-center">
          <span class="text-primary-red mr-3">•</span>
          <a href="/web/rules/factions/" class="text-lg text-gray-300 hover:text-white hover:underline transition-colors">
            Правила Фракций
          </a>
        </div>
        <div class="flex items-center">
          <span class="text-primary-red mr-3">•</span>
          <a href="/web/rules/crime/" class="text-lg text-gray-300 hover:text-white hover:underline transition-colors">
            Правила Криминал
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
</PageLayout>