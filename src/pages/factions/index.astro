---
import PageLayout from "../../layouts/PageLayout.astro";

const title = "Фракции и Семьи";
---

<PageLayout {title}>
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <div class="space-y-4">
        <div class="flex items-center gap-3 mb-4">
          <i class="fas fa-shield text-2xl text-primary-red"></i>
          <h1 class="text-xl md:text-2xl font-semibold text-white">
            Государственные структуры:
          </h1>
        </div>

        <div class="space-y-3 pl-4">
          <div class="flex items-center">
            <span class="text-primary-red mr-3">•</span>
            <a
              href="/web/factions/state/"
              class="text-lg text-gray-300 hover:text-white hover:underline transition-colors"
            >
              Государство
            </a>
          </div>
          <div class="flex items-center">
            <span class="text-primary-red mr-3">•</span>
            <a
              href="/web/factions/fsb/"
              class="text-lg text-gray-300 hover:text-white hover:underline transition-colors"
            >
              ФСБ
            </a>
          </div>
          <div class="flex items-center">
            <span class="text-primary-red mr-3">•</span>
            <a
              href="/web/factions/rosgvardia/"
              class="text-lg text-gray-300 hover:text-white hover:underline transition-colors"
            >
              Росгвардия
            </a>
          </div>
          <div class="flex items-center">
            <span class="text-primary-red mr-3">•</span>
            <a
              href="/web/factions/mvd/"
              class="text-lg text-gray-300 hover:text-white hover:underline transition-colors"
            >
              МВД
            </a>
          </div>
          <div class="flex items-center">
            <span class="text-primary-red mr-3">•</span>
            <a
              href="/web/factions/health/"
              class="text-lg text-gray-300 hover:text-white hover:underline transition-colors"
            >
              МинЗдрав
            </a>
          </div>
        </div>
      </div>

      <div class="space-y-4">
        <div class="flex items-center gap-3 mb-4">
          <i class="fas fa-triangle-exclamation text-2xl text-accent-red"></i>
          <h1 class="text-xl md:text-2xl font-semibold text-white">
            Криминальные формирования:
          </h1>
        </div>

        <div class="space-y-3 pl-4">
          <div class="flex items-center">
            <span class="text-accent-red mr-3">•</span>
            <a
              href="/web/factions/volgovskie/"
              class="text-lg text-gray-300 hover:text-white hover:underline transition-colors"
            >
              Банда "Волговские"
            </a>
          </div>
          <div class="flex items-center">
            <span class="text-accent-red mr-3">•</span>
            <a
              href="/web/factions/solnechnye/"
              class="text-lg text-gray-300 hover:text-white hover:underline transition-colors"
            >
              Банда "Солнечные"
            </a>
          </div>
          <div class="flex items-center">
            <span class="text-accent-red mr-3">•</span>
            <a
              href="/web/factions/chuzhie/"
              class="text-lg text-gray-300 hover:text-white hover:underline transition-colors"
            >
              Банда "Чужие"
            </a>
          </div>
          <div class="flex items-center">
            <span class="text-accent-red mr-3">•</span>
            <a
              href="/web/factions/filina-family/"
              class="text-lg text-gray-300 hover:text-white hover:underline transition-colors"
            >
              Семья Филина
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</PageLayout>
