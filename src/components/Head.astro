---
export interface Props {
  title?: string;
  description?: string;
  url?: string;
  siteTitle?: string;
}

const {
  title = "",
  description = "РОЛЕВОЙ ПРОЕКТ RODINA RP в Unturned. Российская ролевая игра, законы, фракции, интерактивная карта.",
  url = "/",
  siteTitle = "RODINA RP",
} = Astro.props;

const fullTitle = title ? `${title} | ${siteTitle}` : siteTitle;
const fullUrl =
  typeof import.meta.env.BASE_URL !== "undefined"
    ? import.meta.env.BASE_URL + url.replace(/^\//, "")
    : url;
const baseUrl =
  typeof import.meta.env.SITE !== "undefined"
    ? import.meta.env.SITE
    : "https://rodina-rp.github.io";
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{fullTitle}</title>

<link rel="canonical" href={baseUrl + url} />

